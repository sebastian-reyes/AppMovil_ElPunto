<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.miperfil.PerfilFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivFotoPerfil"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvPerfilNombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:background="@drawable/style_border_textview"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvPerfilApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/style_border_textview"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:text="TextView"
                android:textColor="@color/negro"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvPerfilEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/style_border_textview"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:text="TextView"
                android:textColor="@color/negro"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:minHeight="50dip"
                android:text="@string/txtBtnEditar"
                android:textColor="@color/white"
                app:icon="@drawable/ic_baseline_edit_24"
                app:iconGravity="textEnd" />

            <Button
                android:id="@+id/btnEliminarUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dip"
                android:text="@string/txtBtnEliminarUsuario"
                app:backgroundTint="@color/design_default_color_error"
                app:icon="@drawable/ic_baseline_delete_forever_24"
                app:iconGravity="textEnd" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>